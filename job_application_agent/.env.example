# Environment Variables for Job Application Agent
# Copy this file to .env and fill in your actual credentials

# LinkedIn Credentials
LINKEDIN_EMAIL=your_linkedin_email@gmail.com
LINKEDIN_PASSWORD=your_linkedin_password

# Naukri.com Credentials
NAUKRI_EMAIL=your_naukri_email@gmail.com
NAUKRI_PASSWORD=your_naukri_password

# Indeed Credentials (optional)
INDEED_EMAIL=your_indeed_email@gmail.com
INDEED_PASSWORD=your_indeed_password

# Resume File Path
RESUME_FILE_PATH=/path/to/your/resume.pdf

# Cover Letter Template Path
COVER_LETTER_PATH=/path/to/your/cover_letter.txt

# Database Configuration
DATABASE_URL=sqlite:///job_applications.db

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Email Notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_notification_email@gmail.com
SMTP_PASSWORD=your_app_password

# Telegram Bot (optional for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Rate Limiting
MAX_APPLICATIONS_PER_HOUR=10
MAX_APPLICATIONS_PER_DAY=50

# Browser Settings
HEADLESS_BROWSER=false
BROWSER_TIMEOUT=30