# Database Configuration
DATABASE_URL=sqlite:///./fleet_weather.db
# For PostgreSQL: postgresql://user:password@localhost/fleet_weather

# Weather API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5
WEATHER_POLL_INTERVAL=300  # seconds (5 minutes)

# Notification Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@fleetweather.com

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Weather Alert Thresholds
HEAVY_RAIN_THRESHOLD=10.0  # mm/h
WIND_SPEED_THRESHOLD=25.0  # m/s
VISIBILITY_THRESHOLD=1000  # meters
EXTREME_TEMP_HIGH=40.0     # Celsius
EXTREME_TEMP_LOW=-20.0     # Celsius